      <TextField fx:id="txtItemCode" layoutX="66.0" layoutY="64.0" onAction="#searchItemOnAction" promptText="Item Code" />
      <TextField fx:id="txtDescription" layoutX="269.0" layoutY="64.0" promptText="Description" />
      <TextField fx:id="txtPackSize" layoutX="469.0" layoutY="64.0" promptText="Pack Size" />
      <TextField fx:id="txtUniqPrice" layoutX="66.0" layoutY="115.0" promptText="Uniq Price" />
      <TextField fx:id="txtQTY" layoutX="269.0" layoutY="114.0" promptText="QTY" />
      <TableView fx:id="tblItem" layoutX="15.0" layoutY="214.0" prefHeight="265.0" prefWidth="703.0">
        <columns>
          <TableColumn fx:id="colItemCode" prefWidth="117.0" text="Item" />
          <TableColumn fx:id="colDescription" prefWidth="181.0" text="Description" />
            <TableColumn fx:id="colPackSize" prefWidth="135.0" text="Pack Size" />
            <TableColumn fx:id="colUniqPrice" prefWidth="147.0" text="Uniq Price" />
            <TableColumn fx:id="colQTY" prefWidth="122.0" text="QTY" />
        </columns>
