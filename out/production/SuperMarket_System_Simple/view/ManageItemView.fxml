            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="363.0" layoutY="174.0" mnemonicParsing="false" onAction="#deleteItem" prefHeight="31.0" prefWidth="92.0" style="-fx-background-radius: 25;" text="Delete">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label layoutX="14.0" layoutY="12.0" text="Manage Item">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>
   </children>
